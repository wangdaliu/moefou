<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:font="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:minHeight="80dp">

    <com.moefou.android.ui.views.custom.RoundedCornerImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        font:sriv_oval="false"
        font:sriv_left_top_corner_radius="5dp"
        font:sriv_right_bottom_corner_radius="5dp"
        font:sriv_right_top_corner_radius="5dp"
        font:sriv_left_bottom_corner_radius="5dp"
        android:layout_centerVertical="true"/>

    <com.moefou.android.ui.views.font.TypefaceTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:singleLine="true"
        font:typeface="roboto_regular"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/black54"/>

    <com.moefou.android.ui.views.font.TypefaceTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        font:typeface="roboto_regular"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon"
        android:layout_toLeftOf="@id/date"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black87"/>

</RelativeLayout>