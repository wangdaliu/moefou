<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center_vertical"
    android:paddingLeft="30dp"
    android:orientation="horizontal">

    <com.moefou.android.ui.views.custom.RoundedCornerImageView
        android:id="@+id/icon"
        android:src="@mipmap/default_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        font:sriv_oval="false"
        font:sriv_left_top_corner_radius="5dp"
        font:sriv_right_bottom_corner_radius="5dp"
        font:sriv_right_top_corner_radius="5dp"
        font:sriv_left_bottom_corner_radius="5dp"
        android:layout_centerVertical="true"/>


    <com.moefou.android.ui.views.font.TypefaceTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black87"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        font:typeface="roboto_regular"/>

</LinearLayout>